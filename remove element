# Define the Solution class
class Solution:
    def removeElement(self, nums, val):
        k = 0  # Pointer for the position of next valid element

        # Iterate over the array
        for num in nums:
            if num != val:
                nums[k] = num  # Move valid element to the "next available" position
                k += 1  # Increment the count of valid elements

        return k  # Return the number of valid elements

# Now you can create an instance of the Solution class
solution = Solution()

# Example 1
nums = [3, 2, 2, 3]
val = 3
k = solution.removeElement(nums, val)
print(k)  # Output: 2
print(nums[:k])  # Output: [2, 2] (or any order without val)

# Example 2
nums = [0, 1, 2, 2, 3, 0, 4, 2]
val = 2
k = solution.removeElement(nums, val)
print(k)  # Output: 5
print(nums[:k])  # Output: [0, 1, 3, 0, 4] (order may vary)
